<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
  <application>
    
    <activity
		android:name="com.kamcord.android.ShareActivity"
		android:configChanges="keyboardHidden|orientation|screenSize"
		android:launchMode="singleTask"
		android:label="Share"
		android:parentActivityName="com.example.YourActivity"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
		android:windowSoftInputMode="stateHidden|adjustResize"
		android:windowActionBar="false" >
		<meta-data
			android:name="android.support.PARENT_ACTIVITY"
			android:value="com.example.YourActivity" />
	</activity>
	<activity
		android:name="com.kamcord.android.WebActivity"
		android:configChanges="keyboardHidden|orientation|screenSize"
		android:launchMode="singleTask"
		android:label="Login"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
		android:parentActivityName="com.kamcord.android.ShareActivity" >
		<meta-data
			android:name="android.support.PARENT_ACTIVITY"
			android:value="com.kamcord.android.ShareActivity" />
	</activity>
	<activity
		android:name="com.kamcord.android.PlayerActivity"
		android:label="Watch"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
		android:launchMode="singleTask"
		android:parentActivityName="com.kamcord.android.ShareActivity" >
		<meta-data
			android:name="android.support.PARENT_ACTIVITY"
			android:value="com.kamcord.android.ShareActivity" />
    </activity>
    
  </application>
  
  <uses-feature android:glEsVersion="0x00020000" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-feature android:name="android.hardware.touchscreen" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  
</manifest>
